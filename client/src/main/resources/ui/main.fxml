    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Button fx:id="btnConnect" mnemonicParsing="false" onMouseClicked="#btnConnectClick" text="连接设备">
