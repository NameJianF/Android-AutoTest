                <!--</HBox.margin>-->
                <!--</Button>-->
                <Button fx:id="btnScreenshot" mnemonicParsing="false" onMouseClicked="#btnScreenshotClick" text="截图">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="btnLive" mnemonicParsing="false" onMouseClicked="#btnLiveClick" text="实时">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Button>

            </children>
            <BorderPane.margin>
                <Insets left="10.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <left>
        <VBox fx:id="vBox" prefHeight="504.0" prefWidth="310.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="imageView" fitHeight="533.0" fitWidth="300.0" pickOnBounds="true"
