                                        </ScrollPane>
                                    </content>
                                </Tab>
                                <Tab text="App Information">
                                    <content>
                                        <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="0.0" minWidth="0.0">
                                            <content>
                                                <ListView fx:id="listViewAppInfo"/>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                                <Tab text="Memory">
                                    <content>
                                        <ScrollPane fx:id="scrollPaneMemory" fitToHeight="true" fitToWidth="true" minHeight="0.0" minWidth="0.0">
                                            <content>
                                                <LineChart fx:id="lineChartMemory" >
                                                    <xAxis>
                                                        <NumberAxis side="BOTTOM"/>
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis side="LEFT" label="Memory(KB)"/>
