                                                </LineChart>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                                <Tab text="CPU">
                                    <content>
                                        <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="0.0" minWidth="0.0">
                                            <content>
                                                <LineChart>
                                                    <xAxis>
                                                        <CategoryAxis side="BOTTOM"/>
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis side="LEFT"/>
                                                    </yAxis>
                                                </LineChart>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                                <Tab text="NetWork">
                                    <content>
                                        <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="0.0" minWidth="0.0">
                                            <content>
                                                <LineChart>
                                                    <xAxis>
                                                        <CategoryAxis side="BOTTOM"/>
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis side="LEFT"/>
                                                    </yAxis>
                                                </LineChart>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                                <Tab text="GPU">
                                    <content>
                                        <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="0.0" minWidth="0.0">
                                            <content>
                                                <LineChart>
                                                    <xAxis>
                                                        <CategoryAxis side="BOTTOM"/>
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis side="LEFT"/>
                                                    </yAxis>
                                                </LineChart>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <TabPane layoutX="71.0" layoutY="14.0" prefHeight="200.0" prefWidth="200.0"
                                 tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="2.0"
                                 AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
                            <tabs>
                                <Tab text="Logcat">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                                                    prefWidth="200.0"/>
                                    </content>
                                </Tab>
                                <Tab text="Tombstones">
                                    <content>
                                        <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="0.0" minWidth="0.0">
                                            <content>
                                                <TextArea editable="false"/>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                                <Tab text="ANR Traces">
                                    <content>
                                        <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="0.0" minWidth="0.0">
                                            <content>
                                                <TextArea editable="false"/>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <Pane prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
